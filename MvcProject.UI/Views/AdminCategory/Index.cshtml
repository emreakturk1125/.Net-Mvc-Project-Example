@using MvcProject.Entity.Concrete
@model List<Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Adı</th>
        <th>Açıklama</th>
        <th>Güncelle</th>
        <th>Sil</th>
        <th>Başlıklar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryId</td>
            <td>@item.CategoryName</td>
            <td>@item.CategoryDescription</td>
            <td>
                <a href="/AdminCategory/UpdateCategory/@item.CategoryId" class="btn btn-warning">Güncelle</a>
            </td>
            <td>
                <a href="/AdminCategory/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a>
            </td>
            <td>
                <button class="btn btn-info">Başlıklar</button>
            </td>
        </tr>
    }
</table>
<br />
<a href="/AdminCategory/AddCategory" class="btn btn-success">Yeni Kategori</a>

