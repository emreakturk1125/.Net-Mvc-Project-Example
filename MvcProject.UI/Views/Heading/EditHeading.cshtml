@model MvcProject.Entity.Concrete.Heading

@{
    ViewBag.Title = "EditHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Başlık Engelleme Sayfası</h2>

@using (Html.BeginForm("EditHeading","Heading",FormMethod.Post))
{
<div class="form-group">
    @Html.Label("Başlık Id")
    @Html.TextAreaFor(x => x.HeadingId, new { @class = "form-control" })
    <br />
    @Html.Label("Başlık Adı")
    @Html.TextAreaFor(x => x.HeadingName, new { @class = "form-control" })
    <br />
    @Html.Label("Tarih")
    @Html.TextAreaFor(x => x.HeadingDate, new { @class = "form-control" })
    <br />
    @Html.Label("Yazar Id")
    @Html.TextAreaFor(x => x.WriterId, new { @class = "form-control" })
    <br />
    @Html.Label("Kategori")
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.vlc, "-Lütfen Seçiniz-", new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Güncelle</button>
</div>
}

