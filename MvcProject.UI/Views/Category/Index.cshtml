            <th>Adı</th>
            <th>Açıklama</th>
            <th>Durumu</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
             <tr>
                 <td></td>
                 <td></td>
                 <td></td>
                 <td></td>
                 <td>
                     <button class="btn btn-success">Güncelle</button>
